{
  "name": "@pqt/publish",
  "version": "0.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/pqt/publish",
  "author": "Austin Paquette <austin.paquette@forcir.com>",
  "scripts": {
    "build": "tsc",
    "format": "prettier --check \"**/*.*\"",
    "format:write": "prettier --write \"**/*.*\"",
    "lint": "yarn format && yarn eslint",
    "lint:fix": "yarn format:write && yarn eslint --fix",
    "eslint": "eslint \"**/*.ts?(x)\"",
    "test": "jest --passWithNoTests",
    "package": "ncc build --source-map"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "globby": "^11.0.1",
    "node-fetch": "^2.6.1",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@pqt/eslint-config": "^0.0.17",
    "@pqt/prettier-config": "^0.0.8",
    "@types/node-fetch": "^2.5.7",
    "@types/semver": "^7.3.4",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run package"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js}": [
      "eslint --quiet",
      "jest --silent --passWithNoTests"
    ],
    "**/*.*": [
      "prettier --write --loglevel=silent"
    ]
  },
  "license": "MIT"
}
